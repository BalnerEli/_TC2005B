<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>La comidita</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

    <header>
        <nav class="navbar is-light" role="navigation" aria-label="main navigation">
            <div class="navbar-brand">
                <a class="navbar-item" href="https://bulma.io">
                    <img src="https://i.pinimg.com/236x/39/65/7b/39657b18e1c85375a438b4cb77baa7af.jpg" alt="Bulma: Free, open source, and modern CSS framework based on Flexbox" height="100">
                </a>

                <% if (isLoggedIn == true)  { %>

                    <span class="navbar-item">
                        <%= username %>
                    </span>
                    
                    <% for(let permiso of privilegios) { %>
                        <% if (permiso.nombre == 'platillos_ver') { %>
                            <a class="navbar-item" href="/platillos">
                                Ver men√∫
                            </a>
                        <% } %>

                        <% if (permiso.nombre == 'platillos_agregar') { %>
                            <a class="navbar-item" href="/platillos/add">
                                Agregar platillos
                            </a>
                        <% } %>

                        <% if (permiso.nombre == 'platillos_opinar') { %>
                            <a class="navbar-item" href="/platillos/opinion">
                                Opiniones
                            </a>
                        <% } %>

                        <% if (permiso.nombre == 'platillos_ordenar') { %>
                            <a class="navbar-item" href="/platillos/ordenar">
                                Ordenar
                            </a>
                        <% } %>
                    <% } %>
                    
                <a class="navbar-item" href="/platillos/nosotros">
                    Nosotros
                </a>
                <a class="navbar-item" href="/platillos/about">
                    Labs
                </a>
                <% } %>
            </div>
            
            <div class="navbar-end">
                <div class="navbar-item">
                    <div class="buttons">
                        <% if (isLoggedIn == false)  { %>
                        <a class="button is-primary" href="/users/add">
                            <strong>Registrarse</strong>
                        </a>
                        <a class="button is-light" href="/users/login">
                            Entrar
                        </a>
                        <% } else { %>
                        <a class="button is-danger" href="/users/logout">
                            Salir
                        </a>
                        <% } %>
                    </div>
                </div>
                
            </div>
        </nav>
    </header>
    <main>
        <section class="section">
            <div class="container">